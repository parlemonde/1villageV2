{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@frontend/*": ["./src/frontend/*"],
      "@lib/*": ["./src/lib/*"],
      "@server/*": ["./src/server/*"],
      "@server-actions/*": ["./src/server-actions/*"]
    }
  },
  "include": [
    "drizzle.config.ts",
    "next-env.d.ts",
    "next.config.ts",
    "src/**/*.html",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.txt",
    "src/image-loader.js",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
